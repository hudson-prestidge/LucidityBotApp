extends ./layouts/main
block content
  .container
    ul
      li
        a(href="/home") home
      if user
        li
          a(href="/logout") logout user.username
      else
        li
          a(href="/login") login
    h1 Sign In
    ul
      each val in messages
        li= val

    form(method="POST")
      label(for="username") Username
      input(type="text" name="username")

      label(for="password") Password
      input(type="password" name="password")

      input(type="submit")
